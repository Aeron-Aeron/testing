{
  "name": "gh-actions-ci-cd-demo",
  "version": "0.1.0",
  "description": "Sample Node.js + TypeScript project showcasing a CI/CD pipeline powered by GitHub Actions only.",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/index.js",
    "ci": "npm run lint && npm run test && npm run build",
    "package": "npm run build && npm pack --pack-destination dist"
  },
  "keywords": [
    "ci",
    "cd",
    "github-actions",
    "node",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@types/node": "^20.17.1",
    "eslint": "^9.10.0",
    "typescript-eslint": "^8.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
